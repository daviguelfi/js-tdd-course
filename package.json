{
  "name": "spotify-wrapper",
  "version": "1.0.0",
  "description": "A wrapper to work with the Spotify Web API",
  "main": "index.js",
  "scripts": {
    "lint": "./node_modules/.bin/eslint src/*.js",
    "pre-push": "npm run lint && npm run test:coverage",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register",
    "test:tdd": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register --watch",
    "test:coverage": "nyc npm test"
  },
  "nyc": {
    "functions": 80,
    "lines": 80,
    "check-coverage": true,
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daviguelfi/spotify-wrapper.git"
  },
  "keywords": [
    "js",
    "tdd"
  ],
  "author": "Davi Guelfi <daviguelfi@gmail.com> (https://github.com/daviguelfi)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/daviguelfi/spotify-wrapper/issues"
  },
  "homepage": "https://github.com/daviguelfi/spotify-wrapper#readme",
  "devDependencies": {
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^3.5.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "husky": "^4.2.5",
    "mocha": "^7.2.0",
    "node-fetch": "^2.6.0",
    "nyc": "^15.0.1",
    "sinon": "^6.1.3",
    "sinon-chai": "^3.2.0"
  }
}
